<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#ffffff"
    android:id="@+id/goalLayoutId"
    >

    <RelativeLayout
        android:id="@+id/zaoqititle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1874CD" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:text="学习目标"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <Button
            android:id="@+id/setmengxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/sort_in_lobby"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/textView5"
            android:background="@drawable/top_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="67dp"
        android:textColor="#6e6e6e"
         android:textSize="22sp"
        android:text="开始"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="27dp"
        android:text=" "
        android:textStyle="bold"
        android:textColor="#33b5e5"
		android:textSize="60sp"        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv"
        android:layout_centerVertical="true"
        android:text="我的梦想是"
         android:textSize="22sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6e6e6e" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="74dp"
        android:layout_marginRight="25dp"
        android:text="6:00"
        android:textStyle="bold"
        android:textColor="#33b5e5"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="42dp"
        android:textSize="22sp"
        android:text="我的梦想从每天的"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6e6e6e" />
    
</RelativeLayout>
