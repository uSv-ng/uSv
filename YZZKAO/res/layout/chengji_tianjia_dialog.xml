<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试名称"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/nameEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="年级排名"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/nianpaiEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="number"
            android:maxLength="5"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="班级排名"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/banpaiEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="5"
            
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="语文成绩"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/yuwenEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="3"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="数学成绩"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/shuxueEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="3"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="英语成绩"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/yingyuEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="3"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="理综成绩"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/lizongEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="3"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="文综成绩"
            android:gravity="center"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/wenzongEditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="3"
            />
    </LinearLayout>
</LinearLayout>
